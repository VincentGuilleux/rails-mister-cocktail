<div class="container">
  <h4><%= @cocktail.name %></h4>
  <br>
  <h5>Doses</h5>
  <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to "ðŸ—‘", dose_path(dose), method: :delete, class: "btn btn-link" %>
        </li>
      <% end %>
   </ul>

    <br>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Submit dose", class: "btn btn-primary" %>
    <% end %>


  <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
</div>
