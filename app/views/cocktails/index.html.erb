  <div class="d-flex justify-content-between border-bottom">
    <h3>cocktails</h3>
    <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-primary" %>
  </div>


  <!-- <%= cl_image_tag("https://res.cloudinary.com/dlspzrlvr/image/upload/v1585915731/jaisxdtanlcmyru2y3of.jpg", alt: "Coucou",
        width: 400, height: 300, crop: :fill) %> -->

  <div class="container my-5">
        <div class="cards">
          <% @cocktails.each do |cocktail| %>
            <div class="card-category"

            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill if cocktail.photo.attached? %>')">
              <div class="card-tag"><h3> <%= cocktail.name %> </h3></div>
              <div class="card-link"><p><%= link_to 'Show', cocktail %></p></div>
            </div>
          <% end %>
        </div>
  </div>




