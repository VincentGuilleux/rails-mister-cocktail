<p id="notice"><%= notice %></p>

<h1>cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td class="td"><%= cocktail.name %></td>
        <td><%= image_tag "", width: 100 %></td>
        <td><%= link_to 'Show', cocktail, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-primary" %>
